<div class='p-5'>
  <h3><%= I18n.t('documents') %> > <%= I18n.t('new') %></h3>
  <%= form_for @doc, :html => {:multipart => true} do |form| %>
    <div class="field form-group mt-2">
      <label>File<span class="text-danger">*</span></label>
      <%= form.file_field :file, class:"form-control" %>
    </div>

    <div class="field form-group mt-2">
      <label><%=I18n.t('file_name')%><span class="text-danger">*</span></label>
      <%= form.text_field :name, class:"form-control" %>
    </div>
    <%= render 'layouts/input/action' %>
  <% end %>
</div>