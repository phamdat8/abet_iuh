<div class='p-5'>
  <h3>User > List</h3>
  <hr/>
  <a href='/admin/users/new'><button class='btn btn-outline-success'>+</button></a>
  <table class="table caption-top">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Full name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Role</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <th><%= user.first_name.to_s + ' ' + user.last_name.to_s %></th>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.role %></td>
          <td class="d-flex justify-content-end">
            <a href='/admin/users/<%=user.id%>'><i class="mx-1 fas fa-angle-double-right"></i></a>
            <a href='/admin/users/<%=user.id%>/edit'><i class="mx-1 far fa-edit"></i></a>
            <a href='/admin/users/<%=user.id%>' data-method="DELETE"><i class="mx-1 fas fa-trash-alt"></i></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>