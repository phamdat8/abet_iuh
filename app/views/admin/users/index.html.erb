<div class='p-5'>
  <h3><%= I18n.t('user.users') %> > <%= I18n.t('list') %></h3>
  <hr/>
  <a href='/admin/users/new'><button class='btn btn-outline-success'>+</button></a>
  <table class="table caption-top">
    <thead>
      <tr>
        <th scope="col"><%= I18n.t('no_') %></th>
        <th scope="col"><%= I18n.t('full_name') %></th>
        <th scope="col">Email</th>
        <th scope="col"><%= I18n.t('phone') %></th>
        <th scope="col"><%= I18n.t('role') %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <th><%= user.full_name %></th>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.role %></td>
          <td class="d-flex justify-content-end">
            <a href='/admin/users/<%=user.id%>'><i class="mx-1 fas fa-angle-double-right"></i></a>
            <a href='/admin/users/<%=user.id%>/edit'><i class="mx-1 far fa-edit"></i></a>
            <a href='/admin/users/<%=user.id%>' data-method="DELETE" onclick="if (confirm('Delete selected item?')){return true;}else{event.stopPropagation(); event.preventDefault();};"><i class="mx-1 fas fa-trash-alt"></i></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>