<div class="p-5">
  <h3>SO > <%= @so.name %></h3>
  <hr/>
  <h4><%= I18n.t('basic_info') %></h4>
  <div class="card border border-primary mb-3 text-dark">
    <div class="card-header">
      </b><%= I18n.t('content') %></b>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @so.content %></p>
      </blockquote>
    </div>
  </div>
  <hr/>
  <h4><%= I18n.t('pi_list') %></h4>
  <% unless current_user.lecturer? %>
    <a href='/admin/so/<%=@so.id%>/pi/new'><button class='btn btn-outline-success'>+</button></a>
  <%end%>
  <%=
    action = ['show']
    action << 'delete' unless current_user.lecturer?
    render 'layouts/table',
    data: @pi,
    columns: ['id', 'content'],
    action: action,
    link: "admin/so/#{@so.id}/pi"
  %>

</div>