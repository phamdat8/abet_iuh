<div class="p-5">
  <h3><%= I18n.t('subjects') %> > <%= @subject.name %> > <%= I18n.t('lo') %> > <%= I18n.t('new') %></h3>
  <hr/>

  <form action="/admin/subjects/<%=@subject.id%>/learning_outcomes/<%= @lo.id %>/lo_types" accept-charset="UTF-8" method="post">
    <%=
      render 'layouts/input/error',
      data: @lo_type
    %>
    <%=
      render 'layouts/input/text',
      name: 'name',
      label: 'name',
      required: true
    %>

    <%=
      render 'layouts/input/textarea',
      name: 'title',
      label: 'title',
      required: true
    %>
    
    <%= render 'layouts/input/action' %>
  </form>
</div>