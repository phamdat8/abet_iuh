<div class='p-5'>
  <h3><%= I18n.t('rooms') %> > <%= I18n.t('list') %></h3>
  <hr/>
  <a href='/rooms/new'><button class='btn btn-outline-success'>+</button></a>
  <%# <%= render 'layouts/input/search' %>
  <table class="table caption-top">
    <thead>
      <tr>
        <th scope="col"><%= I18n.t("name") %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td class="d-flex justify-content-end">
            <%unless current_user.admin?%>
              <a href='<%= room_path(room.id)%>'><i class="fas fa-angle-double-right"></i></a>
            <%end%>
            <% if current_user.admin? %>
              <a href='/rooms/<%=room.id%>' data-method="DELETE" onclick="if (confirm('Delete selected item?')){return true;}else{event.stopPropagation(); event.preventDefault();};"><i class="mx-1 fas fa-trash-alt"></i></a>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination d-flex justify-content-center">
    <%# <%= will_paginate @docs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>